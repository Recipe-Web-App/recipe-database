{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,

  // SQL formatting
  "sqltools.format": {
    "keywordCase": "upper",     // SELECT instead of select
    "identifierCase": "lower"   // table_name instead of TABLE_NAME
  },

  // PostgreSQL connection (via SQLTools if using it)
  "sqltools.connections": [
    {
      "name": "Local PostgreSQL",
      "driver": "PostgreSQL",
      "server": "localhost",
      "port": 5432,
      "database": "recipe_platform",
      "username": "${env:DB_MAINT_USER}",
      "password": "${env:DB_MAINT_PASSWORD}"
    }
  ],

  // Files to ignore
  "files.exclude": {
    "**/.DS_Store": true
  },

  // Enable formatting on save for SQL files
  "[sql]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "SQLFluff.sqlfluff"
  },
