{
  "editor.tabSize": 2,
  "editor.insertSpaces": true,

  // Python formatting and linting (matching pre-commit config)
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.codeActionsOnSave": {
      "source.organizeImports.isort": "explicit"
    }
  },

  // Shell script linting and formatting (matching pre-commit config)
  "[shellscript]": {
    "editor.formatOnSave": true
  },

  // Python-specific settings
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length=88"],
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": [
    "--max-line-length=88",
    "--extend-ignore=E203,W503"
  ],
  "python.linting.mypyEnabled": true,
  "python.linting.mypyArgs": [
    "--ignore-missing-imports",
    "--no-strict-optional"
  ],
  "isort.args": [
    "--profile=black",
    "--line-length=88"
  ],

  // Shell script linting settings (matching pre-commit config)
  "shellcheck.enable": true,
  "shellcheck.executablePath": "shellcheck",
  "shellcheck.exclude": [],
  "shellcheck.customArgs": ["-x"],
  "shellformat.useEditorConfig": true,
  "shellformat.effectLanguages": [
    "shellscript",
    "dockerfile",
    "dotenv",
    "hosts",
    "jvmoptions",
    "ignore",
    "gitignore",
    "spring-boot-properties",
    "azcli",
    "bats"
  ],

  // SQL formatting
  "sqltools.format": {
    "keywordCase": "upper",     // SELECT instead of select
    "identifierCase": "lower"   // table_name instead of TABLE_NAME
  },

  // PostgreSQL connection (via SQLTools if using it)
  "sqltools.connections": [
    {
      "name": "Local PostgreSQL",
      "driver": "PostgreSQL",
      "server": "localhost",
      "port": 5432,
      "database": "recipe_platform",
      "username": "${env:DB_MAINT_USER}",
      "password": "${env:DB_MAINT_PASSWORD}"
    }
  ],

  // Files to ignore
  "files.exclude": {
    "**/.DS_Store": true
  },

  // Enable formatting on save for SQL files
  "[sql]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "dorzey.vscode-sqlfluff"
  },
